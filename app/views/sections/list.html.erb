<div class="container">

<br />

<%= link_to content_tag(:span, nil ,:class => "glyphicon glyphicon-plus-sign")+ "  Add Section", {:action => "new",:page_id => @page.id}, :class => "btn btn-default btn-sm"%>

<br />

  <h2>Section(s) of <%= @page.name %> page</h2>
  <p style="padding-left:5px;display:inline-block;"><%= pluralize(@page_sections.size,'sections') %>  found </p>
<br />

                                                                                  
  <div class="table-responsive">   



  <table class="table">
    <thead>
    <tr>
		
			<th style="border-top-left-radius: 10px;">&nbsp;</</th>
			<th>Section</th>
			<th>Visible</th>
			<th>Content Type</th>
			<th>Content</th>
		 	<th style="border-top-right-radius: 10px;width:205px;">Actions</th>
		 </tr>
    </thead>
    <tbody>
    		</tr>
		<% @sections.each do |section| %>
	<tr>
		<td><%= section.position %></td>
		<td><%= section.name %></td>
		<td class="center"><%= section.visible %></td>
		<td class="center"><%= section.content_type %></td>
		<td class="center"><%= section.content%></td>
		<td>


			<%# link_to("Show",{:action => 'show', :id => section.id,:page_id => @page.id}, :class => 'action show') %>

			<%# link_to("Edit",{:action => 'edit', :id => section.id,:page_id => @page.id}, :class => 'action edit') %>

