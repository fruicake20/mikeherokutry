			<%= link_to content_tag(:button, 'Edit' ,:class => "btn btn-default"),{:action => 'edit', :id => section.id,:page_id => @page.id} %>

			<%= link_to content_tag(:button, 'Delete' ,:class => "btn btn-default"),  { action: 'delete' ,id: section.id,:page_id => @page.id}, data: {confirm: 'Are you sure?'} %>

		</td>
	</tr>
	<% end %>
    </tbody>
  </table>
<%= will_paginate @sections, renderer: BootstrapPagination::Rails, :previous_label => 'Previous', :next_label => 'Next' %>
  </div>
</div>