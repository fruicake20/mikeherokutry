			<%= link_to content_tag(:button, 'Show' ,:class => "btn btn-default"), {:action => 'show', :id => page.id,:subject_id => @subject.id} %>


			<%= link_to content_tag(:button, 'Edit' ,:class => "btn btn-default"),{:action => 'edit', :id => page.id,:subject_id => @subject.id} %>

			<%= link_to content_tag(:button, 'Delete' ,:class => "btn btn-default"),  { action: 'delete' ,id: page.id,:subject_id => @subject.id}, data: {confirm: 'Are you sure?'} %>






