<div class="container">

<br />

<%= link_to content_tag(:span, nil ,:class => "glyphicon glyphicon-plus-sign")+ "  Add Page", {:action => "new",:subject_id => @subject.id}, :class => "btn btn-default btn-sm"%>

<br />

  <h2>Page(s) of <%= @subject.name %> subject</h2>
  <p style="padding-left:5px;display:inline-block;"><%= pluralize(@subject_pages.size,'pages') %>  found </p>
<br />

                                                                                  
  <div class="table-responsive">   



  <table class="table">
    <thead>
    <tr>
		
			<th style="border-top-left-radius: 10px;">&nbsp;</</th>
			<th>Page</th>
			<th>Visible</th>
			<th>Sections</th>
		 	<th style="border-top-right-radius: 10px;width:320px;">Actions</th>
		 </tr>
    </thead>
    <tbody>
    		</tr>
	<% @pages.each do |page| %>
	<tr>
		<td><%= page.position %></td>
		<td><%= page.name %></td>
		<td class="center"><%= page.visible %></td>
		<td class="center"><%= page.sections.size %></td>
		<td>

			<%# link_to("View Sections", {:controller => 'sections',:action => 'list', :page_id => page.id, :subject_id => @subject.id}, :class => 'action show') %>
	

			<%# link_to("Show",{:action => 'show', :id => page.id,:subject_id => @subject.id}, :class => 'action show') %>
			<%# link_to("Edit",{:action => 'edit', :id => page.id,:subject_id => @subject.id}, :class => 'action edit') %>
